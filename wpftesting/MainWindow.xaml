<Window x:Class="wpftesting.MainWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpftesting"
        mc:Ignorable="d"
        Title="Tone Mapping" Height="550" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- CONTROLS -->
        <GroupBox Header="Controls" Grid.Row="0" Grid.Column="0" Margin="10">
            <StackPanel Margin="10">

                <Button Content="Load image..."
                Width="150"
                Margin="0,0,0,15"
                Click="LoadImage_Click"/>

                <!-- Exposure -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Exposure"
                       VerticalAlignment="Center"/>

                    <Slider Grid.Column="1"
                    x:Name="ExposureSlider"
                    Minimum="0.0"
                    Maximum="5.0"
                    SmallChange="0.01"
                    LargeChange="0.1"
                    TickFrequency="0.01"
                    IsSnapToTickEnabled="True"
                    Value="{Binding ElementName=ExposureBox,
                                    Path=Text,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Grid.Column="2"
                     x:Name="ExposureBox"
                     Margin="10,0,0,0"
                     Text="0.5"
                     TextAlignment="Right"/>
                </Grid>

                <!-- White Point -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="White point"
               VerticalAlignment="Center"/>

                    <Slider Grid.Column="1"
            x:Name="WhitePointSlider"
            Minimum="0.5"
            Maximum="7.0"
            SmallChange="0.01"
            LargeChange="0.1"
            TickFrequency="0.01"
            IsSnapToTickEnabled="True"
            Value="{Binding ElementName=WhitePointBox,
                            Path=Text,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Grid.Column="2"
             x:Name="WhitePointBox"
             Margin="10,0,0,0"
             Text="4.00"
             TextAlignment="Right"/>
                </Grid>

                <!-- Colour Boost + Threads -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <!-- Colour Boost -->
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="70"/>

                        <!-- Spacer to align Threads with previous rows -->
                        <ColumnDefinition Width="30"/>

                        <!-- Threads -->
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <!-- Colour Boost -->
                    <TextBlock Text="Colour Boost"
               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
             x:Name="ColourBoostBox"
             Text="4.0"
             TextAlignment="Right"
             KeyDown="ColourBoost_ValueChanged"/>

                </Grid>

                <!-- Generate -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Radio buttons (left) -->
                    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center">
                        <RadioButton x:Name="OpenGLRadio"
                     Content="OpenGL"
                     IsChecked="True"
                     Margin="0,0,15,0"/>

                        <RadioButton x:Name="AsmRadio"
                     Content="ASM"/>
                    </StackPanel>

                    <!-- Generate button (right) -->
                    <Button Grid.Column="1"
            Content="Generate"
            Width="120"
            Margin="10,0,0,0"
            Click="Generate_Click"/>
                </Grid>

                <!-- Time -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Time:"
               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
               x:Name="TimeValueLabel"
               VerticalAlignment="Center"
               Text=""/>

                </Grid>


            </StackPanel>
        </GroupBox>


        <!-- ORIGINAL IMAGE -->
        <GroupBox Header="Original Image" Grid.Row="0" Grid.Column="1" Margin="10,10,10,10">
            <Image x:Name="OriginalImage" Stretch="Uniform"/>
        </GroupBox>

        <!-- BOOSTED IMAGE -->
        <GroupBox Header="Boosted Image" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </GroupBox>

        <!-- PROCESSED IMAGE -->
        <GroupBox Header="Processed Image" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10">
            <Image x:Name="OutputImage" Stretch="Uniform"/>
        </GroupBox>

    </Grid>

</Window>
